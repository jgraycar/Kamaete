<ul class="list-group col-sm-6 members-list">
  {{#each sortedMembers as |member|}}
    <li class="list-group-item members-list-item">
      {{#if member.upcomingPerformances}}
        <span class="badge">{{member.upcomingPerformances.length}}</span>
      {{/if}}

      {{#link-to 'members.show' member}}{{member.name}}{{/link-to}}

      <button class="btn-icon pull-right" {{action 'delete' member}}>
        <span class="glyphicon glyphicon-remove"></span>
      </button>
    </li>
  {{/each}}
  <li class="list-group-item">
    <form class="row" {{action 'createMember' on='submit'}}>
      <paper-input label="New member name" id="new-member-name" class="col-sm-10"></paper-input>

      <button type="submit" class="btn btn-default">Create</button>
    </form>
  </li>
</ul>
