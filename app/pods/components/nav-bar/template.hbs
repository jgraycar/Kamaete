<div class="container-fluid">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    {{#link-to 'index' class='navbar-brand'}}Kamaete{{/link-to}}
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
      {{#if session.isAuthenticated}}
        {{#link-to 'performances' tagName='li'}}
            {{#link-to 'performances'}}Performances{{/link-to}}
        {{/link-to}}
      {{/if}}
    </ul>


    <ul class="nav navbar-nav navbar-right">
      {{#if session.isAuthenticated}}
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
             aria-haspopup="true" aria-expanded="false">{{session.currentUser.identifier}} <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li>{{#link-to 'account-settings'}}Settings{{/link-to}}</li>

            <li role="separator" class="divider"></li>

            <li><a href="#" {{action 'invalidateSession'}}>Sign Out</a></li>
          </ul>
        </li>
      {{else}}
        {{#link-to 'login' tagName='li' class='visible-sm-inline'}}
          {{#link-to 'login'}}Log in{{/link-to}}
        {{/link-to}}

        {{#link-to 'register' tagName='li'}}
          {{#link-to 'register'}}Sign up{{/link-to}}
        {{/link-to}}
      {{/if}}
    </ul>

    {{#unless session.isAuthenticated}}
      <form class="navbar-form navbar-right hidden-sm" {{action "authenticate" on="submit"}}>
        <div class="form-group">
          {{input value=navbar-email id="navbar-email" type="email" class="form-control" placeholder="Email Address"}}
        </div>
        <div class="form-group">
          {{input value=navbar-password id="navbar-password" type="password" class="form-control" placeholder="Password"}}
        </div>

        <button type="submit" class="btn btn-default">Log in</button>
      </form>
    {{/unless}}
  </div><!-- /.navbar-collapse -->
</div><!-- /.container-fluid -->
