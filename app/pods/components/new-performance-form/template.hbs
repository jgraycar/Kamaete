<form class="form-horizontal" {{action "create" on="submit"}}>
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{input value=title type="text" id="title" class="form-control"}}
    </div>
  </div>
  <div class="form-group">
    <label for="date" class="col-sm-2 control-label">Date</label>
    <div class="col-sm-10">
      {{bootstrap-datepicker value=date id="date" format="DD, MM d, yyyy" class="form-control"
        autoclose=true clearBtn=true}}
    </div>
  </div>

  <div class="form-group">
    <label for="members" class="col-sm-2 control-label">Performers</label>
    <div class="col-sm-10">
      {{#power-select-multiple
        selected=selectedMembers
        options=members
        onchange=(action (mut selectedMembers))
        onkeydown=(action "handleKeydown")
        searchField="name"
        placeholder="Select the members who will be participating in this performance"
        as |member|
      }}
        {{member.name}}
      {{/power-select-multiple}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Create Performance</button>
    </div>
  </div>
</form>