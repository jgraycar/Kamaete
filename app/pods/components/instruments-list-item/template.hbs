<paper-card class="instrument-card">
  <div class="instrument-image">
    <svg viewBox={{instrument.viewBox}}>
      {{kamaete-instrument instrument=instrument class="template"}}
    </svg>
  </div>
  <div class="card-content">
    {{#link-to 'instruments.show' instrument class='card-header'}}
      {{instrument.kind}}
    {{/link-to}}
    <paper-icon-button onclick={{action 'deleteInstrument' instrument}} icon="clear">
    </paper-icon-button>
  </div>
</paper-card>
