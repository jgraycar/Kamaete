<form class="form-horizontal" {{action "create" on="submit"}}>
  <div class="form-group {{ if stage-layout.errors.name 'has-error' }} has-feedback">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input
        value=stage-layout.name
        type="text"
        id="name"
        class="form-control"
        placeholder="What is this layout for?"
      }}

      {{#if stage-layout.errors.name}}
        <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
        <span id="inputError2Status" class="sr-only">(error)</span>
      {{/if}}
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">{{submitButtonText}}</button>
    </div>
  </div>
</form>