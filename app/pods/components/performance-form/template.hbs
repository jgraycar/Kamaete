<form class="form-horizontal" {{action "create" on="submit"}}>
  <paper-input-container always-float-label auto-validate required attr-for-value="value">
    <label>Title</label>
    {{input
      value=performance.title
      type="text"
      id="title"
      is="iron-input"
      required="required"
    }}
    <paper-input-error>Please enter a title for this performance</paper-input-error>
  </paper-input-container>

